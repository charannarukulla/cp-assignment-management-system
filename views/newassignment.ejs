  <script>
    $(document).ready(function(){
      $.ajax({
            type: "POST",
            url: "/getyears",
             
            
            success: function(result){
console.log(result)
 
var $el = $("#year");
 
$.each(JSON.parse(result), function(key,value) {
  $el.append($("<option></option>")
     .attr("value", value.year).text(value.year));
});

}
    });
    $.ajax({
            type: "POST",
            url: "/getdept",
             data:{year:"1ST YEAR"},
            
            success: function(result){
console.log(result)
 
var $el = $("#dept");
$el.empty()
$el.append($("<option></option>")
     .attr("value", "ALL").text("ALL"));
$.each(JSON.parse(result), function(key,value) {
  if(value.dept!='0'&&value.dept!="")
 { $el.append($("<option></option>")
     .attr("value", value.dept).text(value.dept));}
});


}
    });
  
    $("#year").change(function() {
  if ($(this).data('options') === undefined) {
     $(this).data('options', $('#dept option').clone());
  }
  var id = $(this).val();
  $.ajax({
            type: "POST",
            url: "/getdept",
             data:{year:id},
            
            success: function(result){
console.log(result)
 
var $el = $("#dept");
 $el.empty()
 $el.append($("<option></option>")
     .attr("value", "ALL").text("ALL"));
$.each(JSON.parse(result), function(key,value) {
  if(value.dept!='0'&&value.dept!="")
 { $el.append($("<option></option>")
     .attr("value", value.dept).text(value.dept));}
});

}
    });
});
  
  
  
  
  
  
  
  });




  </script>
