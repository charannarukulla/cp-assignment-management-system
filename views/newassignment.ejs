        </aside>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->
 
            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Admin/</span> New assignment</h4>
  
                <!-- Basic Layout -->
                <div class="row">
                  <div class="col-xl">
                    <div class="card mb-4">
                      <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Assignment details</h5> 
                        <small class="text-muted float-end">Assignment id:<%=aid%></small>
                      </div>
                 
                      
                      <div class="card-body">
                        <form method="POST" action="addtest">
                          <div class="mb-3">
                            <input type="text" name="id" value='<%=aid%>'' hidden/>
                            <label class="form-label" for="basic-icon-default-fullname">Problem codes separed by ,</label>
                            <div class="input-group input-group-merge">
                              <span id="basic-icon-default-fullname2" class="input-group-text"
                                ><i class='bx bx-question-mark'></i></span>
                              <input 
                                type="text"
                                class="form-control"
                                name="pscodes"
                                id="basic-icon-default-fullname"
                                placeholder="ABC,DEFG,HIJK"
                                aria-label="ABC,DEFG,HIJK"
                                aria-describedby="basic-icon-default-fullname2" required
                              />
                            </div>
                          </div>
                          <div class="mb-3">
                            
                            <label class="form-label" for="html5-datetime-local-input">Start date and time.</label>
                            <div class="input-group input-group-merge">
                              <span id="basic-icon-default-company2" class="input-group-text"
                                ><i class='bx bxs-time'></i></span>
                              <input
                                type="datetime-local"
                                id="basic-icon-default-company"
                                class="form-control"
                                placeholder="ACME Inc."
                                name="startdt"
                                aria-label="ACME Inc."
                                aria-describedby="basic-icon-default-company2" required
                              />
                            </div>
                          </div>
                          <div class="mb-3">
                            
                            <label class="form-label" for="html5-datetime-local-input">End date and time.</label>
                            <div class="input-group input-group-merge">
                              <span id="basic-icon-default-company2" class="input-group-text"
                                ><i class='bx bxs-time'></i></span>
                              <input
                                type="datetime-local"
                                id="basic-icon-default-company"
                                class="form-control"
                                name="enddt"
                                placeholder="ACME Inc."
                                aria-label="ACME Inc."
                                aria-describedby="basic-icon-default-company2" required
                              />
                            </div>
                          </div>
                          <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-phone">Year</label>
                            <div class="input-group input-group-merge">
                              <span id="basic-icon-default-phone2" class="input-group-text"
                                ><i class='bx bxs-graduation'></i></span>
                                    <select id="year" name="passout" class="form-select form-select-lg">
                                       
                                        <option>ALL</option>
                                      </select>
                            </div>
                          </div>
                          <div class="mb-3">
                            <label class="form-label" for="basic-icon-default-phone">Department </label>
                            <div class="input-group input-group-merge">
                              <span id="basic-icon-default-phone2" class="input-group-text"
                                ><i class='bx bxs-graduation'></i></span>
                                    <select id="dept" name="department" class="form-select form-select-lg">
                                     
                                      </select>
                            </div>
                          </div>
                          <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->

            <!-- Footer -->
            <footer class="content-footer footer bg-footer-theme">
              <div class="container-xxl d-flex flex-wrap justify-content-center py-2 flex-md-row flex-column">
