            </a>  
            <span class="app-brand-text demo text-body fw-bolder"  > CPAM</span>
          </div>

          <div class="menu-inner-shadow"></div>

          <ul class="menu-inner py-1">
            <!-- Dashboard -->
            <li class="menu-item">
              <a href="admindashboard" class="menu-link">
                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                <div data-i18n="Analytics">Dashboard</div>
              </a>
            </li>
            <li class="menu-item">
              <a href="newassignment" class="menu-link">
                <i class='bx bx-code-alt'></i>
                <div data-i18n="Analytics">New assignment</div>
              </a>
            </li>
           
            <li class="menu-item">
              <a href="reports" class="menu-link">
                <i class='bx bxs-report'></i>
                <div data-i18n="Analytics">Reports and analysis</div>
              </a>
            </li>
            <li class="menu-item">
              <a href="years" class="menu-link">
                <i class='bx bx-edit-alt'></i>
                <div data-i18n="Analytics">Manage</div>
              </a>
